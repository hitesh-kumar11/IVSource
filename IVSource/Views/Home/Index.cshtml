<section id="hero" data-images="[&quot;../Uploads/logo/1.jpg&quot;,&quot;../Uploads/logo/maxresdefault.jpg&quot;]" class="hero-slideshow-wrapper hero-slideshow-normal">

    <div class="slider-spinner">
        <div class="double-bounce1"></div>
        <div class="double-bounce2"></div>
    </div>

    <div class="container" style="padding-top: 10%; padding-bottom: 10%;">
        <div class="hero__content hero-content-style1">
            <h2 class="hero-large-text">World Visa Guide</h2>						<div class="hero-small-text">
