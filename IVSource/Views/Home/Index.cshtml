        </div>
        @*<partial name="PartialViews/Gallery" />*@

        @if (Model.News.pages != null)
        {
            <partial name="PartialViews/LatestNews" model="Model" />
        }
        else //// Added by Nushrat to show no content if any page get disabled.//
        {
            <p>No contents available</p>
        }

        @if (Model.Subscribe.SubscribeToUs != null)
