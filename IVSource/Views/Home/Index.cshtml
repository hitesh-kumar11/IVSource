                            {
                                if (x.Image != null)
                                {
                                    <div class="wpcp-slide-item" >
                                        <img src="~/images/Partners/@x.Image" alt="@x.Title" width="120" height="45">
                                    </div>
                                }
                            }
                        </div>
                    </div>
                }
                else
                {
                    <p>No content</p>
                }
            </div>

