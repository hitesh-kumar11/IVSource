        {
            <partial name="PartialViews/VisitorsArea" model="Model" />
        }
        else //// Added by Nushrat to show no content if any page get disabled.//
        {
            <p>No contents available</p>
        }

        @if (Model.AboutUs != null)
        {
            <partial name="PartialViews/AboutUs" model="Model.AboutUs" />
        }
        else //// Added by Nushrat to show no content if any page get disabled.//
        {
            <p>No contents available</p>
        }

        @if (Model.Services != null)
        {
            <partial name="PartialViews/Services" model="Model.Services" />
        }
