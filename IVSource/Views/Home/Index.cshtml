        {
            <p>No contents available</p>
        }
        @if (Model != null)
        {
            <div style="padding: 15px; background:#fff; margin-bottom:30px;">
                @*if (Model.Partners.partners.Description != null)
                 Added by Nushrat to show no content if any page get disabled.*@
                @if (Model.Partners.partners != null)
                {
                    <div class="section-title-area">
                        <h2 class="section-title">@Model.Partners.partners.Title</h2>
                        <div class="section-desc">
                            <p style="text-align: justify;">@Html.Raw(Model.Partners.partners.Description)</p>
                        </div>
                    </div>

