@model IVSource.Models.IvsVisaCategories

@{
    ViewData["Title"] = "VISA CATEGORY";
    Layout = "~/Views/Shared/Admin/_LayoutAdminVisaDetails.cshtml";
}

<div class="row">
    <div class="col-md-10" style="margin:auto;">
        <h2>Update </h2>
        <hr />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" id="CountryName" name="CountryName" value="@TempData.Peek("CountryName")" />
            <div class="form-group">
                <label asp-for="CityName" class="col-for-label control-label"></label>
                : &nbsp;&nbsp; <label> @Html.DisplayFor(model => model.CityName)</label>
            </div>
            <div class="form-group">
                <label asp-for="VisaCategoryCode" class="col-for-label control-label"></label>
                : &nbsp;&nbsp; <label> @Html.DisplayFor(model => model.VisaCategoryCode)</label>
            </div>
            <div class="form-group">
                <label asp-for="VisaCategory" class="col-for-label control-label"></label>
                : &nbsp;&nbsp; <input asp-for="VisaCategory" class="form-control" style="width: 75%; display: inline-block;" />
                <span asp-validation-for="VisaCategory" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="VisaCategoryId" />
            <input type="hidden" asp-for="CityId" />

            <div class="form-group">
                <label asp-for="VisaCategoryInformation" class="control-label"></label>
                <input asp-for="VisaCategoryInformation" type="hidden" />
                <div id="div_editor1">
                </div>
                <span asp-validation-for="VisaCategoryInformation" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="VisaCategoryInformationVisaProcedure" class="control-label"></label>
                <input asp-for="VisaCategoryInformationVisaProcedure" type="hidden" />
                <div id="div_editor2">
                </div>
                <span asp-validation-for="VisaCategoryInformationVisaProcedure" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="VisaCategoryInformationDocumentsRequired" class="control-label"></label>
                <input asp-for="VisaCategoryInformationDocumentsRequired" type="hidden" />
                <div id="div_editor3">
                </div>
                <span asp-validation-for="VisaCategoryInformationDocumentsRequired" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="VisaCategoryInformationProcessingTime" class="control-label"></label>
                <input asp-for="VisaCategoryInformationProcessingTime" type="hidden" />
                <div id="div_editor4">
                </div>
                <span asp-validation-for="VisaCategoryInformationProcessingTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="VisaCategoryNotes" class="control-label"></label>
                <input asp-for="VisaCategoryNotes" type="hidden" />
                <div id="div_editor5">
                </div>
                <span asp-validation-for="VisaCategoryNotes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VisaCategoryRequirements" class="control-label"></label>
                <input asp-for="VisaCategoryRequirements" type="hidden" />
                <div id="div_editor6">
                </div>
                <span asp-validation-for="VisaCategoryRequirements" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsEnable" class="control-label"></label>
                <select asp-for="IsEnable" class="form-control">
                    <option value="1">Enable</option>
                    <option value="0">Disable</option>
                </select>
                <span asp-validation-for="IsEnable" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Priority" class="control-label"></label>
                <input asp-for="Priority" class="form-control" type="number" />
                <span asp-validation-for="Priority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-default blue-button" />
            </div>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            var editor1 = new RichTextEditor("#div_editor1");
            var editor2 = new RichTextEditor("#div_editor2");
            var editor3 = new RichTextEditor("#div_editor3");
            var editor4 = new RichTextEditor("#div_editor4");
            var editor5 = new RichTextEditor("#div_editor5");
            var editor6 = new RichTextEditor("#div_editor6");
            var divCustom1 = $("<div/>").html(("@System.Net.WebUtility.HtmlDecode(Model.VisaCategoryInformation)"));
            var divCustom2 = $("<div/>").html(("@System.Net.WebUtility.HtmlDecode(Model.VisaCategoryInformationVisaProcedure)"));
            var divCustom3 = $("<div/>").html(("@System.Net.WebUtility.HtmlDecode(Model.VisaCategoryInformationDocumentsRequired)"));
            var divCustom4 = $("<div/>").html(("@System.Net.WebUtility.HtmlDecode(Model.VisaCategoryInformationProcessingTime)"));
            var divCustom5 = $("<div/>").html(("@System.Net.WebUtility.HtmlDecode(Model.VisaCategoryNotes)"));
            var divCustom6 = $("<div/>").html(("@System.Net.WebUtility.HtmlDecode(Model.VisaCategoryRequirements)"));
            editor1.setHTMLCode(divCustom1.text());
            editor2.setHTMLCode(divCustom2.text());
            editor3.setHTMLCode(divCustom3.text());
            editor4.setHTMLCode(divCustom4.text());
            editor5.setHTMLCode(divCustom5.text());
            editor6.setHTMLCode(divCustom6.text());
            editor1.attachEvent("change", function () { document.getElementById("VisaCategoryInformation").value = editor1.getHTMLCode(); });
            editor2.attachEvent("change", function () { document.getElementById("VisaCategoryInformationVisaProcedure").value = editor2.getHTMLCode(); });
            editor3.attachEvent("change", function () { document.getElementById("VisaCategoryInformationDocumentsRequired").value = editor3.getHTMLCode(); });
            editor4.attachEvent("change", function () { document.getElementById("VisaCategoryInformationProcessingTime").value = editor4.getHTMLCode(); });
            editor5.attachEvent("change", function () { document.getElementById("VisaCategoryNotes").value = editor5.getHTMLCode(); });
            editor6.attachEvent("change", function () { document.getElementById("VisaCategoryRequirements").value = editor6.getHTMLCode(); });
        });
    </script>
}
