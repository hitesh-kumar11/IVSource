@model IVSource.Models.IvsVisaQuickContactInfo

@{
    ViewData["Title"] = "Quick Contact Info";
    Layout = "~/Views/Shared/Admin/_LayoutAdminWebsite.cshtml";
}

<html>

<body>
    <div class="containers">
        @{if (TempData["Message"] != null)
            {
                <h4 class="text-center" style="color:green;">@TempData["Message"]</h4>
                <br />
            }
        }
        <form method="post" asp-controller="IvsVisaPages" asp-action="QuickContactInfoEdit">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group" style="width:915px">
                <label asp-for="CompanyName" class="control-label"></label>
                <input asp-for="CompanyName" class="form-control"/>
            </div>

            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <textarea asp-for="Address" class="form-control" ></textarea>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
            </div>
                 
            <div class="form-group">
                <input type="submit" class="btn btn-default blue-button" value="Update" />
            </div>
        </form>
    </div>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}