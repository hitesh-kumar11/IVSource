@model IVSource.Models.IvsVisaCategoriesForms
@{
    ViewData["Title"] = "VISA FORMS";
    Layout = "~/Views/Shared/Admin/_LayoutAdminVisaDetails.cshtml";
}

<div class="row">
    <div class="col-md-10" style="margin:auto;">
        <h2>Update </h2>
        <hr />
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SerialNum" />
            <input type="hidden" id="CountryName" name="CountryName" value="@TempData.Peek("CountryName")" />
            <div class="form-group">
                <label asp-for="CityName" class="col-for-label control-label"></label>
                : &nbsp;&nbsp; <label> @Html.DisplayFor(model => model.CityName)</label>
            </div>
            <div class="form-group">
                <label asp-for="VisaCategory" class="col-for-label control-label"></label> 
                : &nbsp;&nbsp; <label> @Html.DisplayFor(model => model.VisaCategory)</label>
            </div>
            <div class="form-group">
                <label asp-for="VisaCategoryCode" class="col-for-label control-label"></label>
                : &nbsp;&nbsp; <label> @Html.DisplayFor(model => model.VisaCategoryCode)</label>
            </div>
            <div class="form-group">
                <label asp-for="Form" class="control-label"></label>
                <input asp-for="Form" class="form-control" />
                <span asp-validation-for="Form" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FormPath" class="col-for-label control-label"></label>  : &nbsp;&nbsp; @Model.FormPath <br />
                <input asp-for="FormPath" class="form-control" type="file" />
                <span asp-validation-for="FormPath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsEnable" class="control-label"></label>
                <select asp-for="IsEnable" class="form-control">
                    <option value="1">Enable</option>
                    <option value="0">Disable</option>
                </select>
                <span asp-validation-for="IsEnable" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-default blue-button" />
            </div>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
