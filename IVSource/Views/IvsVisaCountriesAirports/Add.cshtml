@model IVSource.Models.IvsVisaCountriesAirports

@{
    ViewData["Title"] = "AIRPORTS";
    Layout = "~/Views/Shared/Admin/_LayoutAdminVisaDetails.cshtml";
}

<div class="row">
    <div class="col-md-10" style="margin:auto;">
        <h2>Add</h2>
        <hr />
        <form asp-action="Add" asp-controller="IvsVisaCountriesAirports" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" id="CountryName" name="CountryName" value="@TempData.Peek("CountryName")" />
            <input type="hidden" asp-for="AirportId" />
            <div class="form-group">
                <label asp-for="AirportName" class="control-label"></label>
                <input asp-for="AirportName" class="form-control" />
                <span asp-validation-for="AirportName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AirportCode" class="control-label"></label>
                <input asp-for="AirportCode" class="form-control" />
                <span asp-validation-for="AirportCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AirportType" class="control-label"></label>
                <select asp-for="AirportType" class="form-control">
                    <option value="I">International</option>
                    <option value="D">Domestic</option>
                </select>
                <span asp-validation-for="AirportType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsEnable" class="control-label"></label>
                <select asp-for="IsEnable" class="form-control">
                    <option value="1">Enable</option>
                    <option value="0">Disable</option>
                </select>
                <span asp-validation-for="IsEnable" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default blue-button" />
            </div>
            <div>
                <a asp-action="Index" asp-controller="IvsVisCountriesAirports">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
