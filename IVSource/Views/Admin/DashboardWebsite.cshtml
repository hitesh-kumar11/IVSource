
@{
    ViewData["Title"] = "DASHBOARD";
    Layout = "~/Views/Shared/Admin/_LayoutAdminWebsite.cshtml";
}
@section CustomStyles{
    <style>
        .content-wrapper {
            background: #f4f6f9;
        }

        .wrapper {
            margin: 0;
            padding: 0;
        }

        .page-header {
            background-image: linear-gradient(to right, #f4f6f9,#007bff,#f4f6f9);
        }
    </style>
}
<div class="container">
    <br />
    <div class="text-center">
            <h5 class="font-weight-bolder">Welcome to Admin Panel</h5>
    </div>
    <br />
    <section class="content">
        <div class="container-fluid">
            <!-- Small boxes (Stat box) -->
            <div class="row">
                <div class="col-4">
                    <!-- small box -->
                    <div class="small-box bg-info">
                        <div class="inner">
                            <h3>10</h3>
                            <p>Pages</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-bag"></i>
                        </div>
                        <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                    </div>
                </div>
                <!-- ./col -->
                <div class="col-4">
                    <!-- small box -->
                    <div class="small-box bg-success">
                        <div class="inner">
                            <h3>05 </h3>
                            <p>Menus</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-stats-bars"></i>
                        </div>
                        <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                    </div>
                </div>
                <!-- ./col -->
                <div class="col-4">
                    <!-- small box -->
                    <div class="small-box bg-danger">
                        <div class="inner">
                            <h3>65</h3>
                            <p>Visitors</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-pie-graph"></i>
                        </div>
                        <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                    </div>
                </div>
                <!-- ./col -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
</div>