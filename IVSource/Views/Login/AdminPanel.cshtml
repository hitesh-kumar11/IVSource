@model IVSource.Models.Login

@{
    Layout = "~/Views/Shared/Admin/_LayoutAdminLogin.cshtml";
}

<div class="row">
    <div class="col-lg-12 login-title">
        ADMIN PANEL
    </div>

    <div class="col-lg-12 login-form">
        <div class="col-lg-12 login-form">
            <div>
                <div class="text-center">
                    <strong>
                        WELCOME BACK TO IVSource ADMIN PANEL
                    </strong>
                    <p>
                        Please login below!
                    </p>
                </div>
                <div class="text-danger field-validation-error text-center">@ViewBag.Message</div><br />
                <form asp-action="AdminPanel">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        @*<input asp-for="UserName" class="form-control" placeholder="User Name" value="ivaadmin" />*@
                            <input asp-for="UserName" class="form-control" placeholder="User Name" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        @*<input asp-for="Password" class="form-control" type="password" placeholder="Password" value="aDm1n#1Va" />*@
                        <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <input type="submit" value="Login" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
